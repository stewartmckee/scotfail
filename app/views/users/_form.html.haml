= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :twitter_id
    = f.number_field :twitter_id
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :screen_name
    = f.text_field :screen_name
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :profile_image_url
    = f.text_field :profile_image_url
  .actions
    = f.submit 'Save'
